<%= stylesheet_link_tag "stylish-portfolio.css" %>
    <%= stylesheet_link_tag "polaroid.css" %>
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet">

<h1>
  <%= @event.name %><br>
  <%= @event.description %><br>
  <%= @event.location %><br>
  <%= @event.date %>
</h1>


<!-- Polaroid gallery -->
<div class="row">
  <div class="large-08 columns" style="overflow: visible">
    <ul class="polaroids large-block-grid-4 small-block-grid-2"> 
      <h4>
          <% @events.each do |event| %>
            <li>
              <a href="/events/<%= event.id %>" title="<%= event.name %>">
              <img alt="<%= event.name %>" src="<%= event.image_id %>" /> 
              </a>
            </li>
          <% end %>        
      </h4>
    </ul>
  </div>
</div>
<!-- /Polaroid gallery -->



